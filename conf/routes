# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.ApplicationController.index

# Authentication
GET     /login                      controllers.AuthenticationController.login
POST    /login                      controllers.AuthenticationController.authenticate
GET     /logout                     controllers.AuthenticationController.logout

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.versioned(path="/public", file: Asset)
GET     /pets                       controllers.PetItemsController.list
GET     /pets/initialize            controllers.PetItemsController.initialize
POST    /pets                       controllers.PetItemsController.create
GET     /pets/:id                   controllers.PetItemsController.details(id: Long)
PUT     /pets/:id                   controllers.PetItemsController.update(id: Long)
DELETE  /pets/:id                   controllers.PetItemsController.delete(id: Long)


